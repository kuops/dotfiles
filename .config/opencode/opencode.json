{
    "$schema": "https://opencode.ai/config.json",
    "theme": "one-dark",
    "autoupdate": false,
    "default_agent": "plan",
    "tui": {
        "scroll_speed": 3,
        "scroll_acceleration": {
            "enabled": true
        },
        "diff_style": "auto"
    },
    "watcher": {
        "ignore": [
            "node_modules/**",
            "dist/**",
            ".git/**"
        ]
    },
    "model": "zhipuai-coding-plan-anthropic/glm-4.7",
    "small_model": "zhipuai-coding-plan-anthropic/glm-4.5-air",
    "provider": {
        "zhipuai-coding-plan-anthropic": {
            "npm": "@ai-sdk/anthropic",
            "options": {
                "baseURL": "https://open.bigmodel.cn/api/anthropic/v1"
            },
            "models": {
              "glm-4.7": {
                "name": "GLM-4.7"
              },
              "glm-5": {
                "name": "GLM-5"
              },
              "glm-4.5-air": {
                "name": "GLM-4.5-air"
              }
            }
        }
    }
}
